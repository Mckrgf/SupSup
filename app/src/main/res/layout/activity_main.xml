<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    style="@style/result_pop_scroll"
    android:background="@color/wechatbackcolor"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:baselineAligned="false">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <include layout="@layout/all_sub_top"/>

            <LinearLayout
                android:layout_below="@+id/ll_alltop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <Button
                    android:text="系统供电检查(整体供电)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/power_all_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:elevation="20dp"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:text="系统供电检查(控制柜供电)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/power_cabinet_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:text="系统接地检查"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ground_check_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="系统运行检查"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/run_check_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:text="控制站检查"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/controller_check_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="操作站检查"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opstation_check_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="系统规模信息"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/system_info_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="机柜腐蚀检测"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cabinet_corrosion_detection_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:text="控制柜"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/control_cabine_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</ScrollView>

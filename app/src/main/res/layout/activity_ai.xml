<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:background="@color/wechatbackcolor"
    style="@style/result_pop_scroll">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:baselineAligned="false">

        <include layout="@layout/all_sub_top"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_below="@+id/ll_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <Button
                    android:text="文字识别"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/letter_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:text="身份证识别"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idcard_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:text="人脸识别"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/face_button"
                    android:background="@drawable/preference_single_item"
                    android:drawableRight="@drawable/submenu"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MyScrollBar">
        <attr name="clickEnable" format="boolean" />
        <attr name="isHorizontal" format="boolean" />
        <attr name="speed" format="integer" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="times" format="integer" />
    </declare-styleable>

    <declare-styleable name="MyToggleButton">
        <attr name="onColor" format="color|reference"/>
        <attr name="offColor" format="color|reference"/>
        <attr name="padding" format="dimension|reference"/>
    </declare-styleable>


</resources>
